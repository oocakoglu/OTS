
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<OTS.Core.DTOModels.CargoList>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Cargo List</h5>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Cargo Logo</th>
                                <th>Cargo Company</th>
                                <th>Created By</th>
                                <th>Transactions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.CargoImageUrl" height="70" width="70" alt="No Image"/>
                                    </td>
                                    <td>@item.CargoName</td>
                                    <td>@item.UserName</td>
                                    <td>
                                        <a class="btn btn-warning" href="/Cargo/Update/@item.CargoId">
                                            <i class="fa fa-bell">&nbsp;&nbsp;Update&nbsp;</i>
                                        </a>

                                        <a class="btn btn-danger" href="/Cargo/Delete/@item.CargoId">
                                            <i class="fa fa-minus-circle">&nbsp;&nbsp;Delete&nbsp;</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


