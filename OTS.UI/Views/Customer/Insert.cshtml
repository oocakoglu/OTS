@{
    ViewData["Title"] = "Customer Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<OTS.Model.Market>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <form class="form-horizontal" action="/Customer/Insert" method="post" onsubmit="theButton.disabled = true; return true;">
                <div class="card-body">
                    <h4 class="card-title">Customer Info</h4>
                    <span id="StatusBar" hidden></span>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="fname" class="control-label col-form-label">Customer Search</label>
                            <div class="form-group row">
                                <input type="text" class="form-control col-4" id="SearchPhone" autocomplete="off" placeholder="Please Search Customer Number">
                                <a class="btn btn-warning" onclick="SearchCustomer()"  href="#">
                                    <i class="fa fa-search">Search</i>
                                </a>
                            </div>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Customer Name</label>
                            <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Customer Name" disabled required>
                        </div>
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Customer Phone</label>
                            <input type="text" class="form-control" id="CustomerPhone" name="CustomerPhone" placeholder="Customer Phone" disabled required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Market Name</label>
                            <select name="MarketId"  id="MarketId" class="form-control" disabled>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.MarketId">@item.MarketName</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Adress</label>                
                            <textarea class="form-control" id="CustomerAddress"  name="CustomerAddress" placeholder="Please Enter Customer Address" disabled></textarea>
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button name="theButton" id="theButton" type="submit" class="btn btn-primary" disabled>
                            <i class="fa fa-save">&nbsp;&nbsp;Save</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


