
@{
    ViewData["Title"] = "Customer Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model OTS.Model.Customer

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <form class="form-horizontal" action="/Customer/Update" method="post" onsubmit="theButton.disabled = true; return true;">
                <div class="card-body">
                    <h4 class="card-title">Customer Update</h4>
                    <input type="text" name="CustomerId" value="@Model.CustomerId" hidden>

                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Customer Name</label>
                            <input type="text" class="form-control" id="CustomerName" name="CustomerName" placeholder="Customer Name" value="@Model.CustomerName" required>
                        </div>
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Customer Phone</label>
                            <input type="text" class="form-control" id="CustomerPhone" name="CustomerPhone" placeholder="Customer Phone" value="@Model.CustomerPhone" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Market Name</label>
                            <select name="MarketId" id="MarketId" class="form-control">
                                @foreach (var item in ViewBag.market)
                                {
                                    @:<option value="@item.MarketId" @(item.MarketId == Model.MarketId ? "selected" : "")>@item.MarketName</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label for="fname" class="control-label col-form-label">Adress</label>
                            <textarea class="form-control" id="CustomerAddress" name="CustomerAddress" placeholder="Please Enter Customer Address">@Model.CustomerAddress</textarea>
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button name="theButton" id="theButton" type="submit" class="btn btn-primary">
                            <i class="fa fa-save">&nbsp;&nbsp;Update</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


