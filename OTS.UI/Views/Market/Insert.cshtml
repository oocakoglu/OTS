
@{
    ViewBag.Title = "Market Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <form class="form-horizontal" action="/Market/Insert" method="post" onsubmit="theButton.disabled = true; return true;">
                <div class="card-body">
                    <h4 class="card-title">Market Info</h4>
                    <div class="form-group row">
                        <label for="fname" class="control-label col-sm-2 col-form-label">Market Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="MarketName" name="MarketName" placeholder="Market Name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="control-label col-sm-2 col-form-label">Commision</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="Commision" name="Commision" placeholder="Commision Rate" required>
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button name="theButton" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

